#!/usr/bin/env ruby
require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

turn_count = 0
current_player = "X"
while turn_count < 9

  turn(board)
  turn_count += 1

  if current_player == "X"
    current_player = "O"
  else
    current_player = "X"
  end
end
